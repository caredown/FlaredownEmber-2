<% content_for :body do %>
<div style="width:100%;background-color:#F2EEE8;padding:50px 0;text-align:center;font-family:sans-serif;">
  <div style="background-color:#fff;border-radius:5px;padding:30px;width:80%;max-width:500px;margin: 0 auto;box-shadow: 0 4px 0 #E1D8C8;">

    <h1><%= I18n.t('checkin_reminder_mailer.subject', app_name: @app_name) %></h1>

    <div class="opt_img">
      <%= image_tag attachments['attachment.png'].url %>
    </div>

    <p><%= I18n.t('checkin_reminder_mailer.body.text', app_name: @app_name) %></p>

    <%= link_to 'Check In Online', @click_here_link, {:style=> "background-color: #{@client.theme_color};color:white !important;padding:15px 25px;text-decoration:none;border-radius:4px;margin:10px;display:inline-block"} %>
    <p style="color:grey;font-size:14px;">
      <%= I18n.t('checkin_reminder_mailer.body.bottom', app_name: @app_name) %>
      <%= link_to I18n.t('checkin_reminder_mailer.body.link.unsubscribe'), @unsubscribe_link, { style: "color:#{@client.theme_color}" } %>
    </p>
  </div>
</div>
<% end %>
