{{#application-wrapper as |config|}}
  {{#if (or config.invalidSubdomain (not config.clientApproved) )}}
    {{invalid-subdomain invalidSubdomain=config.invalidSubdomain}}
  {{else}}
    {{application-header currentPath=currentPath isAdminSubdomain=config.isEmptySubdomain}}

    {{outlet}}
  {{/if}}

  {{application-footer isAdminSubdomain=config.isEmptySubdomain}}

  {{#if (and session.isAuthenticated (not config.isEmptySubdomain))}}
    {{bottom-nav}}
  {{/if}}

  {{outlet "modal"}}
{{/application-wrapper}}
