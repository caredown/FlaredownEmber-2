{{#form-for for=model onSubmit="saveProfile"}}
  {{#if showReminder}}
    {{add-reminder model=model title="Should we remind you to check in?"}}
  {{/if}}

  {{#unless forOnboarding}}
    <br>
    {{input type="submit" value=(if isLoading "Saving..." "Save") disabled=isLoading}}
  {{/unless}}

{{/form-for}}
