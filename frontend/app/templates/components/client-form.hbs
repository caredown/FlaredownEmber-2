{{#form-for for=model onSubmit="save"}}
  {{#if processedMessage}}
    <div class='signupMsg'>
      <div>{{processedMessage}}</div>
      <br>
      <p>Return to Client {{#link-to 'client.login'}}Log in{{/link-to}}</p>
    </div>
  {{else}}
    {{#form-field for="email" label="Email"}}
      {{input value=model.email placeholder="Enter your email" class="fs-private"}}
    {{/form-field}}

    {{#form-field for="name" label="Name"}}
      {{input type="text" value=name placeholder="Enter Client Name"}}
    {{/form-field}}

    {{#form-field for="appName" label="Application Name"}}
      {{input class='clientAppName' type="text" value=appName placeholder="Enter Client Application Name" focus-out=(action 'fillSlugName')}}
    {{/form-field}}

    {{#form-field for="slugName" label="Subdomain"}}
      {{input type="text" value=slugName placeholder="Enter Subdomain"}}
    {{/form-field}}

    {{#form-field for="themeColor" label="Theme Color"}}
      {{input type="text" value=themeColor placeholder="Enter Theme Color"}}
    {{/form-field}}

    {{#form-field for="backgroundColor" label="Background Color"}}
      {{input type="text" value=backgroundColor placeholder="Enter Background Color"}}
    {{/form-field}}

    {{#form-field for="password" label="Password"}}
      {{input type="password" value=model.password placeholder="Enter a secure password"}}
    {{/form-field}}

    <br>
    <p>Already have an account? {{#link-to 'client.login'}}Log in{{/link-to}}</p>

    {{input type="submit" class="btn btn-default left" value="Create"}}

    {{#if errorMessage}}
      <div class="alert alert-danger">
        <p><strong>Registration failed:</strong> <code>{{errorMessage}}</code></p>
      </div>
    {{/if}}
  {{/if}}
{{/form-for}}
