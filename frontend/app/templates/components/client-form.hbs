<h2 class="centered">{{headerText}}</h2>

{{#form-for for=model onSubmit="save"}}
  {{#form-field for="appName" label="App name (maximum 30 characters)"}}
    {{input type="text" value=model.appName placeholder="Enter Client Application Name"}}
  {{/form-field}}

  {{#form-field for="name" label="Company name (used in the Terms of Service)"}}
    {{input type="text" value=model.name placeholder="Enter Client Name"}}
  {{/form-field}}

  {{#form-field for="themeColor" label="Color" class="fs-private"}}
    {{#each COLORS as |color|}}
      {{#radio-button name="color" value=color.code groupValue=model.themeColor changed="colorChanged"}}
        {{color.name}}
      {{/radio-button}}
    {{/each}}
    {{#radio-button name='color' value='' groupValue=model.themeColor changed="onCustom"}}Custom{{/radio-button}}

    {{#if isCustom}}
      {{input type="text" class="themeColor" value=model.themeColor placeholder="Enter Theme Color in HEX format"}}
    {{/if}}
  {{/form-field}}

  <div class="clientLogout">
    <a {{action 'invalidateSession' model}}>Logout</a>
  </div>

  {{input type="submit" class="btn btn-default left" value="Save"}}

  {{#if errorMessage}}
    <div class="alert alert-danger">
      <p><strong>Update failed:</strong> <code>{{errorMessage}}</code></p>
    </div>
  {{/if}}
{{/form-for}}

